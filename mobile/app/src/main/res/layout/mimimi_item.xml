<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:id="@+id/cv_item_mimimi"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="4dp"
    app:cardUseCompatPadding="false"
    app:cardMaxElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_bookmark" />

            <TextView
                android:id="@+id/hashtag"
                android:textSize="18sp"
                android:padding="4dp"
                android:textColor="@color/colorAccent"
                android:text="@string/mimimi_item_hashtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/post_content"
            android:textSize="28sp"
            android:textColor="@color/primatyText"
            android:text="@string/mimimi_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/like"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_favorite_black_24dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/likeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/like"
                android:padding="4dp"
                android:text="@string/mimimi_item_likeds" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>